<%-  include("header") %>

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Form Elements</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
          <li class="breadcrumb-item">Admin Forms</li>
          <li class="breadcrumb-item active">Elements</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">General Form Elements</h5>

              <!-- General Form Elements -->
              <form action="/admin/UpdatedData" method="post" enctype="multipart/form-data"> 
                <input type="hidden" name="id" value="<%= Data.id %>">
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">name </label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" value="<%= Data.name %>">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                  <div class="col-sm-10">
                    <input type="email" class="form-control" name="email" value="<%= Data.email %>">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-2 col-form-label">Mobile number</label>
                  <div class="col-sm-10">
                    <input type="number" class="form-control" name="mNumber" value="<%= Data.mNumber %>">
                  </div>
                </div>
                <fieldset class="row mb-3">
                  <legend class="col-form-label col-sm-2 pt-0">Radios</legend>
                  <div class="col-sm-10">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="gender" id="gridRadios1" value="male" <% if(Data.gender == 'male'){ %>checked<%}%> >
                      <label class="form-check-label" for="gridRadios1">
                        Male
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="gender" id="gridRadios2" value="fimale" <% if(Data.gender == 'female'){ %>checked<%}%> >
                      <label class="form-check-label" for="gridRadios2">
                        Fimale
                      </label>
                    </div>
                  </div>
                </fieldset>
                <div class="row mb-3">
                    <label for="inputDate" class="col-sm-2 col-form-label" >Date of birth</label>
                    <div class="col-sm-10">
                      <input type="date" class="form-control" name="dob" value="<%= Data.dob %>">
                    </div>
                  </div>
               
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-2 col-form-label">discretion</label>
                    <div class="col-sm-10">
                      <textarea class="form-control" style="height: 100px" name="discretion"><%= Data.discretion %></textarea>
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">Select profile picture</label>
                    <div class="col-sm-10">
                      <input class="form-control" type="file" id="formFile" name="adminImage">
                    </div>
                  </div>
                  <img src="<%= Data.Admin_Image %>" alt="" width="100px" height="100px">
                  


                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Submit Button</label>
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Submit Form</button>
                  </div>
                </div>

              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div>

      </div>
    </section>

  </main><!-- End #main -->
<%-  include("footer") %>